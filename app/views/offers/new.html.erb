<%= form_with scope: :listing, url: listings_path, local: true do |form| %>
  <p>
    <%= form.label :interest %><br>
    <%= form.text_field :description %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'To Listings', listings_path %>