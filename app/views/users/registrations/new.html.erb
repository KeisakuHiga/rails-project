<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="padding1">
    <h2>Register</h2>
  </div>
  <div class="row">

    <%= render 'basic_user_info' %>

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Password</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <table class="table table-user-information">
            <tbody>
              <tr>
                <% if @minimum_password_length %>
                  <td><%= f.label :password %><em> ( <%= @minimum_password_length %> characters minimum)</em></td>
                  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                <% end %>
              </tr>
              <tr>
                <td><%= f.label :password_confirmation %></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div><%= f.submit "Sign Up" %></div>
    <% end %>
  </div>
</div>

<%= link_to "Back", :back %>

