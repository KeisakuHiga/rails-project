<%= current_user.email if user_signed_in? %>

<h1>My Profile</h1>

<div class="my_page">
  <p>
    Name: <%= current_user.name %>
  </p>
  <p>
    email: <%= current_user.email %>
  </p>
  <p>
    user_type: <%= current_user.user_type %>
  </p>
  <p>
    mobile_number: <%= current_user.mobile_number %>
  </p>
  <p>
    address: <%= current_user.address %>
  </p>
  <p>
    dob: <%= current_user.dob %>
  </p>
  <p>
    bank_name: <%= current_user.bank_name %>
  </p>
  <p>
    account_number: <%= current_user.account_number %>
  </p>
  <p>
    bsb: <%= current_user.bsb %>
  </p>
  <p>
    driver_id: <%= current_user.driver_id %>
  </p>

  <%= image_tag current_user.avatar, class: 'image-size' %>

<p><%= link_to 'Edit profile', edit_user_registration_path %></p>

<p><%= link_to "Log Out", destroy_user_session_path, method: :delete %></p>