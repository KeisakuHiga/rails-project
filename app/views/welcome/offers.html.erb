<h1>Your Offers</h1>
<% if user_signed_in? %>
  <% if current_user.user_type == false %>
    <div class="index-page">
      <div class="bookshelf">
        <% @offers = Offer.all %>
        <% @offers.each do |offer| %>
          <% if current_user.id == offer.user_id %>
            <div class="book-card bg-light">
              <div class="book-description">
                <p> # <%= offer.id %></p>
                <p> Interest: <%= offer.interest %></p>
                <p> Description: <%= offer.description %></p>
              </div>
              <%= link_to 'Go to the listing', 'offer.listing' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
