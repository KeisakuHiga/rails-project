<div class="container">
  <div class="border2">
    <div class="texta" >
      <div class="listing-title">
        <h2>Title:</h2>
        <p><%= @listing.title %></p>
      </div>
        <div class="listing-amount">
          <h2>Amount:</h2>
          <p>AU<%= number_to_currency(@listing.amount) %></p>
        </div>
        <div class="listing-description">
          <h2>Description:</h2>
          <p><%= @listing.description %></p>
        </div>
        <div class="listing-posted-at">
          <p>Posted at: <%= @listing.created_at.strftime("%b. %d, %Y") %></p>
          <p>Updated at: <%= @listing.updated_at.strftime("%b. %d, %Y") %></p>
        </div>
        <% if (user_signed_in? && current_user.id == @listing.user_id)%>
          <div class="listing-edit-button">
            <%= link_to "Edit", edit_listing_path %>
          </div>
          <div class="listing-delete-button">
            <%= link_to "Delete", @listing,
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete ' + @listing.title } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>