<%= link_to "Edit #{@listing.title}", edit_listing_path %>

<div class="borrower-request">
  <h1>
    Title: <%= @listing.title %>
  </h1>

  <h2>
    <strong>Description:</strong>
  </h2>
  <p>
    <%= @listing.description %>
  </p>


  <h2>
    <strong>Request Amount</strong>
  </h2>
  <p>
    AUD <%= @listing.amount %>
  </p>

  <p><td><%= link_to 'Destroy', @listing,
              method: :destroy,
              data: { confirm: 'Are you sure you want to delete ' + @listing.title } %></td></p>

</div>

<br>

<div class="lenders-offers">
<h1>Offers to <%= @listing.title %></h1>
  <% @listing.offers.each do |offer| %>
    <h2>
      Offering Interest Rate: <%= offer.interest %>
    </h2>
    <h3>
      Description: <%= offer.description %>
    </h3>
  <% end %>
</div>




<%= link_to 'Back', listings_path %>