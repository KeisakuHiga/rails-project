<%= form_for @listing, url: edit_listing_path(@listing), html: {class: "edit-form"},:action => "update" do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :amount %><br>
  <%= f.text_field :amount %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.submit 'Update listing', class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to #{@listing.title}", listing_path  %>
