<% @amount = amount %>
<% @offer_id = offer_id %>

<%= form_tag listing_offer_charges_path(@listing, @offer_id) do %>

  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>
  <% amount %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payment of the interest amount"
          data-amount="<%= @amount %>"
          data-currency="aud"
          data-locale="auto">
  </script>
<% end %>

<br>